{% extends "patient/card/card_base.html.twig" %}

{% block content %}

<div class="list-group list-group-flush">
{% if list|length == 0 %}
    {% if listTouched == true %}
        <div class="list-group-item p-0 pl-1">
            {{ "None{{Issues}}"|xlt }}
        </div>
    {% else %}
    <div class="list-group-item p-0 pl-1">
        {{ "Nothing Recorded"|xlt }}
    </div>
    {% endif %}
{% else %}
    {% for l in list %}
        {{ l.title|text }}{% if loop.index < list|length %}, {% endif %}
    {% endfor %}
{% endif %}
</div>
{% endblock %}
